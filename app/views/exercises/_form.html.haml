= form_for @exercise, :remote => true do |f|
  - if @exercise.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this exercise from being saved:"
      %ul
        - @exercise.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :activity
    = f.select :activity
  .field
    = f.label :value
    = f.float :value
  .field
    = f.label :units
    = f.select :units
  .field
    = f.label :completed
    = f.date :completed

  .actions
    = f.submit 'Save'